<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colors = "true"
        syntaxCheck = "false"
        strict = "false"
        bootstrap = "vendor/autoload.php" >

    <testsuites>
        <testsuite name="main">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>

    <!-- Enable the coverage -->
    <!-- <logging>
         <log type="coverage-html" target="/path/to/coverage" charset="UTF-8"/>
    </logging> -->
</phpunit>
